        </PackageReference>
        <PackageReference Include="Lib9c" Version="1.18.0" />
        <PackageReference Include="Libplanet" Version="5.3.0-alpha.3" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Lib9c.Models\Lib9c.Models.csproj" />
    </ItemGroup>
    
